template(name="Relations")
    //-
        The relation of your corporation to other Corporation
        Friends list, rival list etc

    .relations.panel.component(style="display:none")
        .panel-heading
            .pull-left Relations

        .panel-body
            p
                span Search: 
                input(placeholder=" mayor / town")
                span.btn.btn.default Search

            .row.full-width

                .result-list
                    if noResults
                        p No results for search.
                    each searchResults
                        .user
                            .info
                                h4 #{mayor} of #{name}
                                div: i Level #{level}
                            .actions
                                .btn Send letter
                                .btn Trade
                                .btn War


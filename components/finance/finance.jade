template(name="Treasury")
    //-
        Internal economy status
        Cashflow over time
        Ownershipm, Results, Income, expences

    .treasury.panel.component(style="display:none")
        .panel-heading
            .pull-left Treasury

        .panel-body
            ul.nav.nav-tabs
                li.active: a(href="#finance-overview" data-toggle="tab") Overview
                li: a(href="#finance-transactions" data-toggle="tab") Transactions

            .tab-content
                #finance-overview.tab-pane.active

                    h3 Cash: #{cash}

                    hr
                    h3 Seeing the last #{timeFilter} days
                    .time-filter
                        .btn(days="1") Day
                        .btn(days="7") Week
                        .btn(days="30") Month
                        .btn(days="365") Year

                    .row
                        .income.col-xs-6
                            h2 Income $ #{income}
                            //
                                h4: a(data-toggle="collapse" data-target="#sales") Sales +$ 789.46
                                #sales.collapse.pad-left
                                    p Wool: $ 300.35
                                    p Steel: $ 879.3
                                    p Toys: $ 33333.33
                                
                                h4: a(data-toggle="collapse" data-target="#interest") Interest +$ 6547
                                #interest.collapse.pad-left
                                    p Bank: $ 300.35
                                    p Loans: $ 879.3
                                    p Property: $7566.3
                                
                                h4: a(data-toggle="collapse" data-target="#grants") Grants +$ 6547
                                #grants.collapse.pad-left
                                    p Bank: $ 300.35
                                    p Loans: $ 879.3
                                    p Property: $7566.3
                                
                                h4: a(data-toggle="collapse" data-target="#services") Services +$ 6547
                                #services.collapse.pad-left
                                    p Bank: $ 300.35
                                    p Loans: $ 879.3
                                    p Property: $7566.3
                            
                        .expences.col-xs-6
                            h2 Expences $ #{expences}
                            //
                                p Salaries: $ 0
                                p Loan Interest: $ 0
                                p Rent: $ 0
                                p Politics: $ 0
                    hr

                    .row
                        h3 Result $ #{result}


                #finance-transactions.tab-pane
                    p
                        span Search:
                        input

                    .row
                        .col-xs-4.col-xs-offset-1 Description
                        .col-xs-4 Amount
                        .col-xs-4 Time

                    .row.transaction-list
                        ul
                            each transactions
                                li.transaction.row
                                    .col-xs-4= desc
                                    .col-xs-4= amount
                                    .col-xs-4= formatDate                 

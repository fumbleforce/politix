
@import 'nib'



/* Page containers */

.top-bar
    position:relative
    top: 0
    left: 0
    background: gray
    color:white
    user-select: none

    a
        color:white

    #login-dropdown-list
        position: absolute;
        top: -1px;
        right: 200px;
        
    .accounts-dialog
        margin: 0

    .user-info
        position: absolute;
        top: 0;
        right: 50%;
        
.side-bar
    width: 200px
    height: 100%
    position: fixed
    float:left
    background: gray
        
.main-window
    float:left
    margin-left: 200px
        
#map-container
    width: 100%
    height: 100%
    position: absolute
    top: 0
    left: 0


.center-container
    width:100%
    height: 100%
    background: ghostwhite



.main
    width: 100%
    height: 100%
    position: relative

    
.context-menu
    width: 100px
    height: auto
    z-index:1000;
    position: absolute;
    background-color:#C0C0C0;
    border: 1px solid black;
    padding: 2px;

    ul
        li

            &:hover
                background: darkslategray
                color: white
                cursor:pointer
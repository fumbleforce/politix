
@import 'nib'

@import 'base'

/* Page containers */

.top-bar
    position:relative
    top: 0
    left: 0
    background: gray
    color:textcolor
    user-select: none

    a
        color:textcolor

    #login-dropdown-list
        position: absolute;
        top: -1px;
        right: 200px;
        
    .accounts-dialog
        margin: 0

    .user-info
        position: absolute;
        top: 0;
        right: 50%;

.page-wrapper
    width: 800px
    margin: 60px auto
    overflow: hidden
    position:relative
    background: rgba(255,255,255,0.8)
    box-shadow: 0px 0px 50px 10px rgba(0,0,0,0.52)
    
    .side-bar
        width: 200px
        height: 100%
        float:left
            
    .main-window
        float:left
        width: 400px
        
    .side-bar-right
        width: 200px
        height: 100%
        float:left
        
#map-container
    width: 100%
    height: 100%
    position: absolute
    top: 0
    left: 0


.center-container
    width:100%
    height: 100%



.main
    width: 100%
    height: 100%
    position: relative

    
.context-menu
    width: 100px
    height: auto
    z-index:1000;
    position: absolute;
    background-color:#C0C0C0;
    border: 1px solid black;
    padding: 2px;

    ul
        li

            &:hover
                background: darkslategray
                color: white
                cursor:pointer
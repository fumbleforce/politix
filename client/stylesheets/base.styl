/* Pill radios */

span.pill-radio
    position: absolute;
    right: 0;
    width: 60px;
    height: 25px;
    line-height: 25px;
    padding: 3px;
    color: #FFF;
    text-align: center;
    background: #c06f59;


    /*
    &:after
        content: "";
    */
 
input[type="radio"]
    position: absolute;
    right: 0;
    margin: 0;
    width: 60px;
    height: 35px;
    opacity: 0;
    cursor: pointer;

 
    &+span /*the span element that immediately follow the radio button */
        visibility: hidden; /*temporarily hide the "YES" label*/
        background: #6EB558;
        
    /*
    &+span:after
        content: "Yes";
    */
 
    &:checked+span
        visibility: visible; /*show the "YES" label only if the radio button is checked*/

    




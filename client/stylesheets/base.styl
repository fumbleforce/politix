    packground-position: center
    packground-repeat: no-repeat
    background-size: cover

.row
    margin:0


.btn
    border-radius: 0

.panel
    border-radius: 0px
    user-select: none
    margin: 0
    overflow-y: hidden;
    overflow-x: hidden;

    .panel-heading
        padding: 1px 5px
        border-radius: 0px
        user-select: none

    .panel-body
        padding: 5px
        user-select: none
        resize: none
        overflow-y: auto;
        overflow-x: hidden;

ul
    padding: 0
    margin: 0

    li
        list-style-type: none

.nav-tabs
    
    a
        padding: 2px 5px !important

    > li
        > a
            border-radius: 1px 1px 0 0



a
    color: linen




/* Pill radios */

span.pill-radio
    position: absolute;
    right: 0;
    width: 60px;
    height: 25px;
    line-height: 25px;
    padding: 3px;
    color: #FFF;
    text-align: center;
    background: #c06f59;


    /*
    &:after
        content: "";
    */
 
input[type="radio"]
    position: absolute;
    right: 0;
    margin: 0;
    width: 60px;
    height: 35px;
    opacity: 0;
    cursor: pointer;

 
    &+span /*the span element that immediately follow the radio button */
        visibility: hidden; /*temporarily hide the "YES" label*/
        background: #6EB558;
        
    /*
    &+span:after
        content: "Yes";
    */
 
    &:checked+span
        visibility: visible; /*show the "YES" label only if the radio button is checked*/

    



input, textarea, option, select
    color:black


/* Layout */

.page
    padding: 5px
    position: relative
    overflow: hidden

.panel
    background: panel-background
    border: 5px solid primary
    color: panel-color
    opacity: 0.97
    
    .panel-heading
        background: ghostwhite
        color: primary
        overflow: hidden
        resize: none
        
        .close-btn, .min-btn

            font-weight: bolder
            background: primary
            color: white
            width: 20px
            height: 20px
            border-radius: 2px
            text-align: center
            font-size: 15px

            &:hover
                cursor: pointer !important
                background: white
                color: primary





/* common classes */

.full-width
    width: 100% !important

.hover
    cursor: pointer

.pad-left
    padding-left: 20px

/* Framework */

.drag-component
    position: absolute;
   
.text-center
    width: 100% !important
    text-align: center 


.resizable
    resize: both
    min-width: 120px
    min-height: 90px
    max-width: 80%
    max-height: 80%

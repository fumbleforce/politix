@import 'nib'

text-sm = 10px

/* Color palette */

primary = lightgray
secondary = darkslategrey

panel-background = lightgray
panel-header-background = darkslategrey
panel-header-color = white


/* Bootstrap and default overrides */


.row
    margin:0


.btn
    border-radius: 0

.panel
    border-radius: 0
    user-select: none
    margin: 0
    overflow-y: auto;
    overflow-x: hidden;

    .panel-heading
        padding: 0
        border-radius: 0
        user-select: none

    .panel-body
        padding: 5px
        user-select: none
        resize: none

ul
    padding: 0
    margin: 0

    li
        list-style-type: none

.nav-tabs
    
    a
        padding: 2px 5px !important



/* Layout */

.page
    padding: 5px
    position: relative
    overflow: hidden

.panel
    background: panel-background
    
    .panel-heading
        background: panel-header-background
        color: panel-header-color
    


/* common classes */

.full-width
    width: 100% !important

.hover
    cursor: pointer

/* Framework */

.drag-component
    position:absolute;
    


.resizable
    resize: both
    min-width: 120px
    min-height: 90px
    max-width: 80%
    max-height: 80%

@import 'nib'

text-sm = 10px

/* Color palette */

primary = darkslategray
primaryColor = white
secondary = lightseagreen
secondaryColor = white

panel-background = primary
panel-color = primaryColor
panel-header-background = primary
panel-header-color = primaryColor


/* Bootstrap and default overrides */

html, body
    height:100%
    background: black
    font-size:12px

body
    // background: url(http://2.bp.blogspot.com/-WVHrVifuR9Y/TbEEn_KgSyI/AAAAAAAAAIc/xDQpp7VyZT4/s1600/night-sky-stars.jpg)

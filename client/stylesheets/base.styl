/* General button style (reset) */
.btn
    border: none;
    font-family: inherit;
    font-size: 8px;
    background: none;
    cursor: pointer;
    padding: 4px 7px;
    display: inline-block;
    margin: 3px;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-weight: 700;
    outline: none;
    position: relative;
    transition: all 0.2s;
    border: 1px solid darkslategray;
    background: darkslategray
    overflow: hidden;
    color: white !important

.btn:after
    content: '';
    position: absolute;
    z-index: -1;
    transition: all 0.3s;
    width: 101%;
    height: 0;
    top: 50%;
    left: 50%;
    background: #fff;
    opacity: 0;
    transform: translateX(-50%) translateY(-50%);


/* Pseudo elements for icons */
.btn:before
    font-family: 'icomoon';
    speak: none;
    font-style: normal;
    font-weight: normal;
    font-variant: normal;
    text-transform: none;
    line-height: 1;
    position: relative;
    -webkit-font-smoothing: antialiased;

.btn:hover
    color: darkslategray !important
    background: white

.btn:active
    transition: all 0s;
    color: slategray !important
    background: whitesmoke

.btn:hover:after
    height: 75%;
    opacity: 1;


.btn:active:after
    height: 130%;
    opacity: 1;



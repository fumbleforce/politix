

text-sm = 10px;






/* Bootstrap and default overrides */


.row
    margin:0


.btn
	border-radius: 0

.panel
    border-radius: 0

    .panel-heading
        padding: 0
        border-radius: 0

    .panel-body
        padding: 5px

ul
    padding: 0
    margin: 0

    li
        list-style-type: none;

/* Layout */

.page
	padding: 5px
    position: relative
    overflow: hidden


/* Framework */

.drag-component
    position:absolute;
    


.resizable
    resize: both
    overflow: hidden
    width: 160px
    height: 120px
    min-width: 120px
    min-height: 90px
    max-width: 80%
    max-height: 80%

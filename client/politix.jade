head
    title politix
    link(rel="stylesheet" type="text/css" href="/css/component.css")
    link(rel="stylesheet" type="text/css" href="/css/icons.css")
    style.
        canvas { width: 100%; height: 100% }



template(name="Main")
    //- 
        Top level template.
        The container for all templates.
    


    .main
        
        if currentUser
            if noTown
                +StartGame
            else
                +Dashboard
        else
            +atForm


template(name="Nav")
    +atNavButton
    
    if currentUser
        p= currentUser
        .row
            a.text-center(href="/dashboard")
                .btn.btn-primary.btn-lg Game
    else
        .pull-right


template(name="Layout")
    //- 
        Places the components in their proper place.
        Displayed if company and owner is set
    
    //-
        .top-bar
            +Nav
    h1 Default layout
    .bg-blur.bg-img-town.active(style="z-index:-1")
    .bg-blur.bg-img-market
    .bg-blur.bg-img-gathering
    .bg-blur.bg-img-settlers
    .bg-blur.bg-img-treasury
    .bg-blur.bg-img-relations
    .bg-blur.bg-img-storage
    .bg-blur.bg-img-exploration
    .bg-blur.bg-img-barracks
    

    .page-wrapper
        .side-bar
            if gameActive
                +TownStatus
                +NavList
                //+Chat

        .main-window
            +yield

        .side-bar-right
            if gameActive
                +EventList

template(name="WhiteLayout")
    //- 
        Places the components in their proper place.
        Displayed if company and owner is set
    
    //-
        .top-bar
            +Nav
    h1 White layout
    .bg-blur.bg-img-town.active(style="z-index:-1")
    .bg-blur.bg-img-market
    .bg-blur.bg-img-gathering
    .bg-blur.bg-img-settlers
    .bg-blur.bg-img-treasury
    .bg-blur.bg-img-relations
    .bg-blur.bg-img-storage
    .bg-blur.bg-img-exploration
